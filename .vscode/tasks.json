{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "label": "Kotlin: Run active file",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "kotlinc ${file} -include-runtime -d ${fileDirname}\\${fileBasenameNoExtension}.jar; if ($?) { kotlin ${fileDirname}\\${fileBasenameNoExtension}.jar }"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "编译并用 kotlin 运行当前Kotlin文件，避免主清单属性报错"
        }
    ],
    "version": "2.0.0"
}